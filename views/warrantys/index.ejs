<% layout('layouts/boilerplate') %>
<div style="display: ruby-base">
  <input type="text" class="search-bar" placeholder="SEARCH IT !!" />
  <button class="btn btn-primary search-btn">
    <img src="https://img.icons8.com/ios/20/000000/search--v1.png" />
  </button>
  <button
    class="btn btn-primary card-btn"
    onclick="document.getElementById('add-card').style.display='block'"
  >
    Add
  </button>
  <div class="dropdown setting-menu">
    <button
      class="btn btn-secondary menu-btn"
      style="
        display: flex !important;
        justify-content: center;
        align-content: center;
        right: 15px;
      "
      type="button"
      id="dropdownMenuButton"
      data-toggle="dropdown"
      aria-haspopup="false"
      aria-expanded="false"
    >
      <i class="fa fa-cog fa-2x" aria-hidden="true"></i>
    </button>
    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
      <a class="dropdown-item" href="#">Action</a>
      <a class="dropdown-item" href="#">Another action</a>
      <a class="dropdown-item" href="#">Something else here</a>
    </div>
  </div>
</div>

<div
  class="dropdown"
  style="display: flex; align-content: center; justify-content: center"
>
  filters
  <button
    class="btn-sml opt-btn"
    type="button"
    id="dropdownMenuButton"
    data-toggle="dropdown"
    aria-haspopup="true"
    aria-expanded="false"
  >
    options
  </button>
  <div class="dropdown-menu opt-menu" aria-labelledby="dropdownMenuButton">
    <a class="dropdown-item" href="#">Action</a>
    <a class="dropdown-item" href="#">Another action</a>
    <a class="dropdown-item" href="#">Something else here</a>
  </div>
</div>

<!-- add card for popup -->

<div id="add-card" class="modal">
  <form
    action="/warrantys"
    method="POST"
    class="needs-validation modal-content animate"
    novalidate
  >
    <div class="form-group row">
      <label for="company" class="col-sm-2 col-form-label">Company Name</label>
      <div class="col-sm-10">
        <input
          type="text"
          name="warranty[company]"
          class="form-control col-sm-10 shadow p-3 mb-2 bg-white rounded"
          id="company"
          required
        />
      </div>
    </div>
    <div class="form-group row">
      <label for="product" class="col-sm-2 col-form-label">Product</label>
      <div class="col-sm-10">
        <input
          type="text"
          name="warranty[product]"
          class="form-control col-sm-10 shadow p-3 mb-2 bg-white rounded"
          id="product"
          required
        />
      </div>
    </div>
    <div class="form-group row">
      <label for="purchase" class="col-sm-2 col-form-label"
        >Date Of Purchase</label
      >

      <div class="col-sm-10">
        <input
          type="date"
          name="warranty[purchase]"
          class="form-control col-sm-10 shadow p-3 mb-2 bg-white rounded"
          id="purchase"
          required
        />
      </div>
    </div>
    <div class="form-group row">
      <label for="period" class="col-sm-2 col-form-label"
        >Warranty Period</label
      >
      <div class="col-sm-10">
        <input
          type="number"
          name="warranty[period]"
          class="form-control col-sm-10 shadow p-3 mb-2 bg-white rounded"
          id="period"
          required
        />
      </div>
    </div>
    <div class="form-group row">
      <label for="description" class="col-sm-2 col-form-label"
        >Product Description</label
      >
      <div class="col-sm-10">
        <textarea
          name="warranty[description]"
          id="description"
          cols="10"
          rows="5"
          class="form-control col-sm-10 shadow p-3 mb-2 bg-white rounded"
          required
        ></textarea>
      </div>
    </div>
    <div class="form-group row text-center">
      <div class="col-10 col-sm-10 col-md-12 col-lg-12 mx-auto">
        <a href="#" class="text-light">
          <button
            type="submit"
            class="btn btn-warning"
            style="color: white; width: 150px"
          >
            Update
          </button>
        </a>
      </div>
    </div>
  </form>
</div>

<div class="row" style="padding-right: 12px">
  <%for(let warranty of warrantys) {%>
  <div class="col-12 col-md-6 col-xl-4" style="padding: 2px">
    <a href="warrantys/<%=warranty._id%>"
      ><div class="cards">
        <%=warranty.company%> <br />
        <%=warranty.product%> <br />
        <%=warranty.period%> <br />
        <%=warranty.purchase%> <br />
        <%=warranty.description%> <br />
      </div>
    </a>
  </div>
  <%}%>
</div>
